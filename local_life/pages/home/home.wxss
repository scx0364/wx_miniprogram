/* pages/home/home.wxss */
/* 轮播图区域 */
swiper {
    height: 350rpx;
}
swiper image {
    width: 100%;
    height: 100%;
}
/* 九宫格区域 */
.grid_list {
    display: flex;
    flex-wrap: wrap;
    border-left: 1px solid #efefef;
    border-top: 1px solid #efefef;
}
.grid_item {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 33.33%;
    height: 200rpx;
    border-right: 1px solid #efefef;
    border-bottom: 1px solid #efefef;
    box-sizing: border-box;
}
.grid_item .img {
    width: 60rpx;
    height: 60rpx;
    
}
.grid_item .text {
    font-size: 24rpx;
    margin-top: 10rpx;
}
/* 图片区域 */
.pic {
    display: flex;
    justify-content: space-around;
    padding: 10rpx 20rpx;
}
.pic image {
    width: 45%;
}